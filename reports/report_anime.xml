<odoo>
    <data>
        <web
        id="myanimelist.report_anime"
        model="myanimelist.anime"
        string="Informe anime"
        name="myanimelist.report_anime_view"
        file="myanimelist.report_anime_view"
        report_type="qweb-pdf"/>

        <template id="myanimelist.report_anime_view">
            <t t-foreach="docs" t-as="anime">
                <div class="page">
                    <h2><t t-esc="anime.name"/></h2>
                    <div>
                        <strong>Synopsis:</strong>
                        <span><t t-esc="anime.synopsis"/></span>
                    </div>
        
                    <div>
                        <strong>Score:</strong>
                        <span><t t-esc="anime.score"/></span>
                    </div>
        
                    <div>
                        <strong>Status:</strong>
                        <span><t t-esc="anime.status"/></span>
                    </div>
        
                    <div>
                        <strong>Chapters:</strong>
                        <span><t t-esc="anime.chapters"/></span>
                    </div>
        
                    <div>
                        <strong>Release date:</strong>
                        <span><t t-esc="anime.release_date"/></span>
                    </div>
        
                    <div>
                        <strong>Started watching:</strong>
                        <span><t t-esc="anime.started_watching"/></span>
                    </div>
        
                    <div>
                        <strong>Finished watching:</strong>
                        <span><t t-esc="anime.finished_watching"/></span>
                    </div>
        
                    <div>
                        <strong>Mean score:</strong>
                        <span><t t-esc="anime.mean_score"/></span>
                    </div>
                </div>
            </t>
        </template>
        
    </data>
</odoo>