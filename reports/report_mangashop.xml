<odoo>
    <data>
        <web
        id="myanimelist.report_mangashop"
        model="myanimelist.mangashop"
        string="Manga shop report"
        name="myanimelist.report_mangashop_view"
        file="myanimelist.report_mangashop_view"
        report_type="qweb-pdf"/>

        <template id="myanimelist.report_mangashop_view">
            <t t-foreach="docs" t-as="mangashop">
                <div class="page">
                    <h2><t t-esc="mangashop.name"/></h2>
                    <div>
                        <strong>Author:</strong>
                        <span><t t-esc="mangashop.author"/></span>
                    </div>
        
                    <div>
                        <strong>Synopsis:</strong>
                        <span><t t-esc="mangashop.synopsis"/></span>
                    </div>
        
                    <div>
                        <strong>Chapters:</strong>
                        <span><t t-esc="mangashop.chapters"/></span>
                    </div>
        
                    <div>
                        <strong>Volumes:</strong>
                        <span><t t-esc="mangashop.volumes"/></span>
                    </div>
        
                    <div>
                        <strong>Unit price:</strong>
                        <span><t t-esc="mangashop.unit_price"/></span>
                    </div>
        
                    <div>
                        <strong>Units:</strong>
                        <span><t t-esc="mangashop.units"/></span>
                    </div>
        
                    <div>
                        <strong>Amount:</strong>
                        <span><t t-esc="mangashop.amount"/></span>
                    </div>
                </div>
            </t>
        </template>
        

        
    </data>
</odoo>